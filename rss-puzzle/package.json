{
  "name": "rss-puzzle",
  "version": "1.0.0",
  "description": "Interactive mini-game aimed at enhancing English language skills",
  "main": "webpack.base.config.js",
  "scripts": {
    "start": "webpack serve --open --config ./webpack.config.js --env mode=development",
    "build": "webpack --env mode=production",
    "lint": "node node_modules/eslint/bin/eslint.js ./src",
    "ci:format": "prettier . --check ./src",
    "format": "prettier . --write ./src",
    "prepare": "cd .. && husky rss-puzzle/.husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-webpack-plugin": "^4.0.1",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.1.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier checks"
    }
  },
  "prettier checks": {
    "*.ts": [
      "npm run ci:format",
      "git add"
    ]
  }
}
